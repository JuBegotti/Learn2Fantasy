<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.learn2fantasy.learn2fantasy.ExibirRankJogadorActivity">

    <TextView
        android:id="@+id/exiRankJog_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/posicao_string"
        android:textSize="40sp"
        android:textColor="@color/corDestaque"
        android:textStyle="bold"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/exiRankJog_col"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/col_sting"
        app:layout_constraintTop_toBottomOf="@+id/exiRankJog_pos"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/exiRankJog_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/nome_sting"
        app:layout_constraintTop_toBottomOf="@+id/exiRankJog_pos"
        app:layout_constraintLeft_toRightOf="@id/exiRankJog_col"/>

    <TextView
        android:id="@+id/exiRankJog_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/time_sting"
        app:layout_constraintTop_toBottomOf="@+id/exiRankJog_pos"
        app:layout_constraintRight_toLeftOf="@id/exiRankJog_pts"/>

    <TextView
        android:id="@+id/exiRankJog_pts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/pts_sting"
        app:layout_constraintTop_toBottomOf="@+id/exiRankJog_pos"
        app:layout_constraintRight_toRightOf="parent"/>

    <ListView
        android:id="@+id/exiRankJog_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/exiRankJog_pts">

    </ListView>

</android.support.constraint.ConstraintLayout>
