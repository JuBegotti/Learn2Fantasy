<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.learn2fantasy.learn2fantasy.ExibirInfoJogadorActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/exibirInfoJog_containerNome"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirInfoJog_nomeJog"
                    android:text="@string/nome_jogador_string"
                    android:textColor="@color/corDestaque"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirInfoJog_posicaoJog"
                    android:text="@string/null_sting"
                    android:textColor="@color/corDestaque"
                    android:textSize="20sp"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toBottomOf="@id/exibirInfoJog_nomeJog"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirInfoJog_timeJog"
                    android:text="@string/nome_time_string"
                    android:textColor="@color/corDestaque"
                    android:textSize="20sp"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toBottomOf="@id/exibirInfoJog_nomeJog"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/exibirInfoJog_containerPts"
                android:layout_margin="20dp"
                android:background="@color/cinza"
                app:layout_constraintTop_toBottomOf="@id/exibirInfoJog_containerNome"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirInfoJog_posCont"
                    android:text="@string/null_sting"
                    android:textSize="20sp"
                    android:textColor="@color/corDestaque"
                    android:textStyle="bold"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirInfoJog_posNome"
                    android:text="@string/col_string"
                    android:textColor="@color/preto"
                    android:layout_margin="10sp"
                    app:layout_constraintLeft_toRightOf="@id/exibirInfoJog_posCont"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirInfoJog_ptsCont"
                    android:text="@string/null_sting"
                    android:textSize="20sp"
                    android:textColor="@color/corDestaque"
                    android:textStyle="bold"
                    android:layout_margin="20sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirInfoJog_ptsNome"
                    android:text="@string/pontos_string"
                    android:textColor="@color/preto"
                    android:layout_margin="10sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/exibirInfoJog_ptsCont"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/exibirInfoJog_containerJogos"
                android:layout_margin="20dp"
                android:background="@color/cinza"
                app:layout_constraintTop_toBottomOf="@id/exibirInfoJog_containerPts"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirInfoJog_jogos"
                    android:text="@string/partidas_jogadas_string"
                    android:textColor="@color/preto"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirInfoJog_jogosCont"
                    android:text="@string/null_sting"
                    android:textSize="20sp"
                    android:textColor="@color/corDestaque"
                    android:textStyle="bold"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/exibirInfoJog_containerGols"
                android:layout_margin="20dp"
                android:background="@color/cinza"
                app:layout_constraintTop_toBottomOf="@id/exibirInfoJog_containerJogos"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirInfoJog_gols"
                    android:text="@string/gols_feitos_string"
                    android:textColor="@color/preto"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirInfoJog_golsCont"
                    android:text="@string/null_sting"
                    android:textSize="20sp"
                    android:textColor="@color/corDestaque"
                    android:textStyle="bold"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/exibirInfoJog_containerMin"
                android:layout_margin="20dp"
                android:background="@color/cinza"
                app:layout_constraintTop_toBottomOf="@id/exibirInfoJog_containerGols"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirInfoJog_min"
                    android:text="@string/minutos_jogados_string"
                    android:textColor="@color/preto"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirInfoJog_minCont"
                    android:text="@string/null_sting"
                    android:textSize="20sp"
                    android:textColor="@color/corDestaque"
                    android:textStyle="bold"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
